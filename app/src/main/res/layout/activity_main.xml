<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:onClick="button2_onClick"
        android:text="Настройки"
        app:layout_constraintEnd_toEndOf="@+id/MyCity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MyCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Мой город"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/Actual_Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"


        android:text="@string/Actual_Temp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyCity"
        app:layout_constraintVertical_bias="0.221" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="397dp"
        android:layout_height="169dp"
        android:layout_marginTop="112dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/MyCity"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">>

        <TextView
            android:id="@+id/Morning"
            android:layout_width="128dp"
            android:layout_height="146dp"
            android:text="@string/Утро"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/MidDay"
            android:layout_width="136dp"
            android:layout_height="146dp"
            android:text="@string/Обед"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Evn"
            android:layout_width="143dp"
            android:layout_height="147dp"
            android:text="@string/Вечер"
            android:textSize="20sp" />

    </TableRow>

</android.support.constraint.ConstraintLayout>